<!-- Slightly modified https://tailwindui.com/components/application-ui/lists/stacked-lists#component-f0f183415de745e81fa742d6e1df9e04 -->
<!-- In card with links -->
<%= tag.turbo_frame id: dom_id(@message), class: "overflow-hidden bg-white shadow-sm rounded-md border border-gray-200" do %>
  <%= link_to message_path(@message, mode: 'thread_view'), class: "relative flex justify-stretch gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6" do %>
    <div class="flex grow min-w-0 gap-x-4">
      <div class="min-w-0 flex-auto">
        <p class="text-sm font-normal leading-6 text-gray-900">
          <span class="absolute inset-x-0 -top-px bottom-0"></span>
          <%= @message.title %>
        </p>
      </div>
    </div>
    <div class="flex shrink-0 items-center gap-x-4">
      <div class="hidden sm:flex sm:flex-col sm:items-end">
        <p class="text-sm leading-6 text-gray-900"><%= helpers.nice_datetime_with_time @message.delivered_at %></p>
      </div>
      <%= render Icons::UncollapseComponent.new %>
    </div>
  <% end %>
<% end %>
