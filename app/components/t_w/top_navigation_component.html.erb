    <% end %>
    <% if params[:q].present? %>
      <%= link_to new_filter_path(query: params[:q]), data: { turbo_frame: "modal" }, class: "flex items-center gap-2", title: "Pridať filter" do %>
        <%= render Icons::AddFilterComponent.new %>
      <% end %>
    <% end %>
  </div>
</div>
