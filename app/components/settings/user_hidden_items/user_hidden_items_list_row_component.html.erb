<div class="self-stretch p-6 border-b border-gray-200 items-center gap-4 inline-flex">
  <div class="grow shrink basis-0 gap-1">
    <div class="text-gray-900 text-lg font-medium leading-loose w-fit">
      <%= render Common::TagComponent.new(@item) if @type == 'Tag' %>
      <%= @item.name if @type == 'Filter' %>
    </div>
  </div>
  <% if @item.user_hidden %>
    <%= form_with model: [:settings, Current.user.user_hidden_items.find_by(user_hideable: @item)], method: :delete do |form| %>
      <%= form.button class: "#{@item.user_hidden ? "bg-gray-200" : "bg-indigo-600"} relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2", role: :switch, aria: { checked: @item.user_hidden.to_s } do %>
        <span class="sr-only">Use setting</span>
        <span aria-hidden="true" class="<%= @item.user_hidden ? "translate-x-0" : "translate-x-5" %> pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
      <% end %>
    <% end %>
  <% else %>
    <%= form_with model: [:settings, Current.user.user_hidden_items.new(user_hideable: @item)], method: :post do |form| %>
      <%= form.hidden_field :user_hideable_type, value: @type %>
      <%= form.hidden_field :user_hideable_id, value: @item.id %>
      <%= form.button class: "#{@item.user_hidden ? "bg-gray-200" : "bg-indigo-600"} relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2", role: :switch, aria: { checked: @item.user_hidden.to_s } do %>
        <span class="sr-only">Use setting</span>
        <span aria-hidden="true" class="<%= @item.user_hidden ? "translate-x-0" : "translate-x-5" %> pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
      <% end %>
    <% end %>
  <% end %>
</div>
