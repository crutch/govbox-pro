
<div class="fixed top-20 inset-x-0 m-4 z-30">
  <div class="flex flex-col items-end space-y-4">
    <% @flash.each do |type, msg| %>
      <div data-controller="alert" data-alert-remove-delay-value="1100" class="max-w-sm w-full pointer-events-auto rounded-md bg-<%= get_color_by_type(type) %>-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <% if is_notice(type) %>
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            <% else %>
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium <%= is_notice(type) ? "text-green-800" : "text-red-700" %>">
              <%= msg %>
            </p>
          </div>
          <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
              <button type="button" data-action="alert#close" class="inline-flex rounded-md bg-<%= get_color_by_type(type) %>-50 p-1.5 text-<%= get_color_by_type(type) %>-500 hover:bg-<%= get_color_by_type(type) %>-100 focus:outline-none focus:ring-2 focus:ring-<%= get_color_by_type(type) %>-600 focus:ring-offset-2 focus:ring-offset-<%= get_color_by_type(type) %>-50">
                <span class="sr-only">
                  Dismiss
                </span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>