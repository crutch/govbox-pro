<div class="flex justify-between items-start gap-4 px-6 py-4 bg-white border-t-0 border-r-0 border-b border-l-0 border-gray-200">
  <div class="flex flex-col grow md:flex-row justify-start relative gap-4">
    <div class="flex justify-between">
      <div class="flex my-auto w-fit h-fit">
        <%= render Common::BoxLabelComponent.new(@message_thread.box) %>
      </div>
      <%= render MessageThreadOptionsComponent.new(@message_thread, "block md:hidden") %>
    </div>
    <div class="flex flex-wrap gap-4 items-start md:items-center">
      <span class="flex basis-1/2 grow text-xl font-semibold text-left text-gray-900">
        <%= @message_thread.title %>
      </span>
      <div class="flex justify-start items-start gap-2">
        <% @thread_tags.each do |thread_tag|%>
          <%= render MessageThreads::TagComponent.new(thread_tag) %>
        <% end %>
        <%= link_to edit_message_thread_tags_path(@message_thread), data: { turbo_frame: :modal }, class: "rounded-md bg-blue-100 p-2" do %>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 relative" preserveAspectRatio="xMidYMid meet">
            <path d="M8 4V8M8 8V12M8 8H12M8 8H4" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        <% end %>
      </div>
    </div>
    <%= render MessageThreadOptionsComponent.new(@message_thread, "hidden md:block ml-auto") %>
  </div>
</div>
