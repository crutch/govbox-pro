<tr>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
    <%= link_to @box.name, admin_tenant_box_path(Current.tenant, @box) %>
  </td>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
    <%= @box.uri %>
  </td>
  <% 
    case @box_action
    when 'add' %>
  <td>
    <%= form_with model: [:admin, BoxMembership.new(box: @box, user: @user)], class: "contents" do |form| %>
      <%= form.hidden_field :box_id %>
      <%= form.hidden_field :user_id %>
      <%= form.submit 'Add to box' ,class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </td>
  <% end %>
<% else %>
  <td>
    <%= link_to 'Edit this box', edit_admin_tenant_box_path(Current.tenant, @box), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  </td>
<% end %>
</tr>
