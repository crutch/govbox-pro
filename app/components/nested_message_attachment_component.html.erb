<div class="flex justify-between items-center gap-4 p-2 overflow-x-clip">
  <%= link_to message_message_object_nested_message_object_path(@message, @message_object, @nested_message_attachment), data: { turbo_frame: "_top" }, class: "flex justify-start items-center gap-4 overflow-clip" do %>
    <div class="flex justify-stretch items-center gap-4">
      <%= render Icons::DocumentTextComponent.gray_big %>
    </div>
    <div class="flex flex-col justify-start items-start overflow-x-clip">
      <div class="flex justify-start items-start gap-4 w-full">
        <span class="truncate text-base font-semibold text-left text-gray-900"><%= @nested_message_attachment.name %></span>
      </div>
    </div>
  <% end %>
  <%= render Common::OptionsComponent.new(id: "message-attachment-menu") do |options| %>
    <% options.with_menu_content do %>
      <%= link_to message_message_object_nested_message_object_download_path(@message, @message_object, @nested_message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", data: { turbo_frame: "_top", turbo: false } do %>
        <%= render Icons::ArrowDownTrayComponent.new(css_classes: "h-5 w-5") %>
        Stiahnuť
      <% end %>
      <% if Current.tenant.feature_enabled?(:pdf_transformation) && @nested_message_attachment.downloadable_as_pdf? %>
        <%= link_to message_message_object_nested_message_object_download_pdf_path(@message, @message_object, @nested_message_attachment), class: "flex gap-3", role: "menuitem", tabindex: "-1", data: { turbo_frame: "_top", turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m.75 12 3 3m0 0 3-3m-3 3v-6m-1.5-9H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
          Stiahnuť ako PDF
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
