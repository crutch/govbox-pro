<% if @filters.any? %>
  <div class="flex flex-col justify-start items-start    gap-2">
    <div class="flex justify-start items-start    px-4 py-2">
      <p class="text-sm text-center text-gray-400">Filtre</p>
    </div>
    <% @filters.each do |filter| %>
      <%= link_to message_threads_path(q: filter.query), class: "flex justify-start items-start px-4 py-2 gap-2 overflow-hidden" do %>
        <%= render Icons::FiltersComponent.new() %>
        <p class="truncate text-base font-medium text-left text-gray-900"><%= filter.name %></p>
      <% end %>
    <% end %>
  </div>
<% end %>

