<div class="flex px-2 py-4 border-b border-gray-200 items-start">
  <%= check_box_tag "object_ids[]", @message_object.id, @checked, id: "object_#{@message_object.id}", class: "mt-0.5 md:mt-1 mr-3 ml-1 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600 cursor-pointer", onchange: "this.form.requestSubmit();" %>
  <%= label_tag "object_#{@message_object.id}", class: "flex flex-wrap h-full items-center gap-2 text-gray-900 cursor-pointer" do %>
    <div>
      <%= render Common::IconComponent.new(@icon, classes: "w-5 h-5 md:w-6 md:h-6 text-gray-400") %>
    </div>

    <div class="text-xs md:text-sm mr-2">
      <%= @name %>
    </div>

    <div class="flex flex-wrap gap-1">
      <% SigningTagsHelper.sort_tags(@message_object.tags).each do |tag|%>
        <%= render Common::TagComponent.new(tag) %>
      <% end %>

      <% if @message_object.is_signed? %>
        <%= render Common::TagComponent.new(SigningTagsHelper.signed_externally) %>
      <% end %>
    </div>
  <% end %>
</div>
