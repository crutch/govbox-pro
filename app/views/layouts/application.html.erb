<!DOCTYPE html>
<html class = "h-full bg-white">
  <head>
    <title>GovboxPro</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class = "h-full">
    <%= render UILib::LightLayoutWithSidebarComponent.new do |component| %>
      <% component.with_sidebar do %>
        <%= render UILib::SidebarComponent.new %>
      <% end %>
      <% component.with_static_sidebar do %>
        <%= render UILib::StaticSidebarComponent.new(folders: Folder.all) %>
      <% end %>
      <% component.with_user_menu do %>
        <%= render UILib::UserMenuComponent.new(user: Current.user) %>
      <% end %>
      <% component.with_main_content do %>
        <%= yield %>
      <% end %>
    <% end %>
  </body>
</html>
