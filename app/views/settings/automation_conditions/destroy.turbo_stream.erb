<%= fields_for @automation_rule do |rule_form| %>
  <%= turbo_stream.update 'conditions' do %>
    <% @adjusted_index = 0 %>
    <%= rule_form.fields_for :conditions do |condition_form| %>
      <% if condition_form.index == @index || condition_form.object.delete_record %>
        <%= condition_form.hidden_field :delete_record, value:true %>
        <% @adjusted_index += 1 %>
      <% elsif condition_form.index != @index %>
        <%= render Settings::Rules::ConditionsFormRowComponent.new(form: condition_form, index: @adjusted_index, editable: true) %>
        <% @adjusted_index += 1 %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= fields_for @new_rule do |new_rule_form| %>
  <%= new_rule_form.fields_for :conditions, child_index: @automation_rule.conditions.size do |new_condition_form| %>
    <%= turbo_stream.update 'condition-new' do %>
      <%= render Settings::Rules::ConditionFormComponent.new(form: new_condition_form, index: @automation_rule.conditions.size, enabled: true) %>
    <% end %>
  <% end %>
<% end %>
