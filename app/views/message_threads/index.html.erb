<%= render MessageThreadsTableComponent.new do |component| %>
  <% @message_threads.each do |message_thread| %>
    <% component.with_message_thread do %>
      <%= render MessageThreadsTableRowComponent.new(message_thread: message_thread) %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_frame_tag "next_page_area" do %>
  <%= render Turbo::NextPageComponent.new(
    id:@next_cursor, 
    url:folder_message_threads_url(folder_id: params[:folder_id], :cursor => @next_cursor, format: :turbo_stream)
    ) %>
  <%= render UILib::CenteredSpinnerComponent.new %>
<% end %>
