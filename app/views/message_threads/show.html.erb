<%= render MessageThreadComponent.new do |component| %>
  <% @message_thread.messages.order(:delivered_at).each do |message| %>
    <% component.with_message do %>
      <%= render MessageHeaderComponent.new(message: message) %>
    <% end %>
  <% end %>
<% end %>
<%= link_to 'Run rules', run_rules_message_thread_path(@message_thread) %>
