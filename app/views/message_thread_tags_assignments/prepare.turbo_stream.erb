<%= turbo_stream.replace Common::TagsAssignment::Component::LIST_FRAME do %>
  <%= tag.turbo_frame id: Common::TagsAssignment::Component::LIST_FRAME do %>
    <%=
      render Common::TagsAssignment::ListComponent.new(
        all_tags: @all_tags,
        new_tags_assignments: @new_tags_assignments,
        filtered_tag_ids: @filtered_tag_ids,
        name_search: params[:name_search]) %>
  <% end %>
<% end %>

<%= turbo_stream.replace Common::TagsAssignment::Component::CHANGES_FRAME do %>
  <%= tag.turbo_frame id: Common::TagsAssignment::Component::CHANGES_FRAME do %>
    <%= render Common::TagsAssignment::FutureChangesComponent.new(diff: @diff) %>
  <% end %>
<% end %>

<%= turbo_stream.replace Common::TagsAssignment::Component::ACTIONS_FRAME do %>
  <%= tag.turbo_frame id: Common::TagsAssignment::Component::ACTIONS_FRAME do %>
    <%= render Common::ModalActionsComponent.new do |actions| %>
      <% actions.with_submit_button do %>
        <% if @diff.number_of_changes > 0 %>
          <%= submit_tag "Uložiť zmeny (#{@diff.number_of_changes})", formaction: message_thread_tags_assignment_path(@message_thread), formmethod: :patch, data: { turbo_frame: "_top" }, class: "inline-flex w-full justify-center items-center px-3 py-2 rounded-md bg-blue-600 font-medium text-left text-sm text-white hover:cursor-pointer sm:w-auto" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
